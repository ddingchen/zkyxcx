/* home.wxss */
@import "/common/common.wxss";
page{
  background-color: #f7f7f7;
}
.header{
  box-sizing: border-box;
  width:100%;
  background-color:#3f84ff;
  padding:40rpx 24rpx;
  display: flex;
}
.header_left{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
.message{
  display: flex;
  flex-direction: row;
}
.portrait{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-grow: 0;
}
.userbox{
  flex-grow: 1;
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.username{
  font-size: 30rpx;
  color:#ffffff;
}
.score{
  font-size: 28rpx;
  color:#ffffff;
}
.header_left progress{
  margin-top: 16rpx;
} 


.header_right{
  flex-grow: 0;
  width: 80rpx;
  height: 80rpx;
  margin-left: 24rpx;
}

/*即将参与*/
.soon{
  background-color:#ffffff;
  padding-left:24rpx;
  margin-top: 24rpx;
  border-bottom:1px solid #e6e6e6; 
}
.title{
  font-size: 30rpx;
  color:#4c4c4c;
  padding: 16rpx 0;
  width:100%;
  border-bottom:1px solid #e6e6e6; 
}
.game{
  padding: 24rpx 0;
  border-bottom:1px solid #e6e6e6; 
  font-size: 28rpx;
  display: flex;
}
.game_left{
  flex-grow: 0;
  width:250rpx;
  height:134rpx;
}
.game_right{
  flex-grow: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.game_title{
  color:#4c4c4c;
}
.game_k{
  color:#808080;
}
.game_k text{
  color: #ffbe00;
}
.game_time{
  color:#fb7c73; 
}
.game_time1{
  color:#808080; 
}
.game:last-child{
  border-bottom:none; 
}