<!--home.wxml-->
<block wx:if="{{scene > 0}}">
  <view class="hidebox">
    <view class="signin">
        <view class="top">
            <image class="cx1" src="../../images/cx1.png"></image>
            <view class="circle1">
                <view class="circle2">
                    <view class="signtitle1">签到</view>
                </view>
            </view>
            <image class="cx2" src="../../images/cx2.png"></image>
            <image class="tran1" src="../../images/tran1.png"></image>
            <view class="signtitle2">签到成功</view>
            <image class="tran2" src="../../images/tran2.png"></image>
        </view>
        <view class="bot">
            <view class="bottitle1">感谢您！打卡参与{{tasks_name}}</view>
            <view class="bottitle2">努力争取比赛的好成绩把~</view>
            <view class="kbbtn" bindtap="receive">点击领取奖励{{reward}}铠币</view>
        </view>
    </view>  
</view>
</block>



<view class="header">
